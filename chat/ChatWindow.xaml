<Window x:Class="chat.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chat"
        mc:Ignorable="d"
        Title="Chat" Height="457.2" Width="807.2" ResizeMode="CanMinimize" Closing="Window_Closing">
    <Grid>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="366" VerticalAlignment="Top" Width="774" Margin="10,10,0,0"/>
        <Button x:Name="btnSend" Content="Send" HorizontalAlignment="Left" Margin="709,387,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.381,-0.104" Height="23" Click="btnSend_Click"/>
        <TextBox x:Name="message" HorizontalAlignment="Left" Height="23" Margin="10,387,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="682" KeyDown="message_KeyDown"/>

    </Grid>
</Window>
